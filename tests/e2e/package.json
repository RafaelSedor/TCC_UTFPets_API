{
  "name": "utfpets-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for UTFPets using Selenium WebDriver",
  "scripts": {
    "test": "mocha --require ts-node/register --timeout 60000 'specs/**/*.spec.ts'",
    "test:single": "mocha --require ts-node/register --timeout 60000",
    "test:watch": "mocha --require ts-node/register --timeout 60000 --watch 'specs/**/*.spec.ts'"
  },
  "keywords": [
    "selenium",
    "e2e",
    "testing",
    "utfpets"
  ],
  "author": "Rafael Sedor",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@types/selenium-webdriver": "^4.1.21",
    "chai": "^6.2.0",
    "chromedriver": "^141.0.4",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.16.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
