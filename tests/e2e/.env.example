# ==================================
# CONFIGURAÇÃO TESTES E2E - UTFPets
# ==================================

# URL base da aplicação (desenvolvimento local)
BASE_URL=http://localhost:4200

# Credenciais do usuário de teste
# IMPORTANTE: Crie um usuário específico para testes no backend
TEST_USER_EMAIL=teste@utfpets.com
TEST_USER_PASSWORD=Test@12345
TEST_USER_NAME=Usuário Teste

# Credenciais do segundo usuário (para testes de compartilhamento)
TEST_USER2_EMAIL=teste2@utfpets.com
TEST_USER2_PASSWORD=Test@12345
TEST_USER2_NAME=Usuário Teste 2

# Credenciais do admin (para testes de administração)
TEST_ADMIN_EMAIL=admin@utfpets.com
TEST_ADMIN_PASSWORD=Admin@12345

# Configurações de timeout (em milissegundos)
DEFAULT_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000

# Modo headless (true = sem interface gráfica, false = com interface)
HEADLESS_MODE=true

# Captura de screenshots
CAPTURE_SCREENSHOTS=true
SCREENSHOT_ON_FAILURE=true
