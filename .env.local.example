# ========================================
# UTFPets - Local Development Environment
# ========================================
# Copy this file to .env.local and fill in your local credentials
# This file is used by docker-compose.local.yml and backend container
#
# Quick Setup:
# 1. cp .env.local.example .env.local
# 2. Update JWT_SECRET, APP_KEY, and Cloudinary credentials below
# 3. docker-compose -f docker-compose.local.yml up -d
#
# N√ÉO COMMITAR o arquivo .env.local! Apenas este .example

# ========================================
# Docker Compose & App Configuration
# ========================================
APP_NAME="UTFPets API (Local)"
APP_ENV=local
APP_DEBUG=true
# Generate with: php artisan key:generate
APP_KEY=base64:your_generated_app_key_here
APP_URL=http://localhost
API_PUBLIC_URL=http://localhost
FRONTEND_URL=http://localhost:4201

# ========================================
# Database - Local Development
# ========================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=utfpets
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ========================================
# Database - Test Environment
# ========================================
TEST_DB_HOST=postgres-test
TEST_DB_PORT=5432
TEST_DB_DATABASE=utfpets_test
TEST_DB_USERNAME=utfpets
TEST_DB_PASSWORD=utfpets_test_password

# ========================================
# JWT Authentication
# ========================================
# Generate a random 256-bit key with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_256_bits
JWT_TTL=60
JWT_ALGO=HS256

# ========================================
# Cloudinary (Image Storage)
# ========================================
# Get your credentials from https://cloudinary.com/console
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_UPLOAD_PRESET=your_preset

# ========================================
# CORS Configuration
# ========================================
# Development: Allow all origins for testing
# Production: Use specific origins like https://app.seudominio.com
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# ========================================
# Queue Configuration
# ========================================
QUEUE_CONNECTION=database
QUEUE_MAX_TRIES=5

# ========================================
# Feature Flags
# ========================================
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_WEIGHTS_TRACKING=true
FEATURE_CALENDAR_EXPORT=true

# ========================================
# Weights Tracking
# ========================================
WEIGHTS_MIN_VALUE=0.1
WEIGHTS_MAX_VALUE=999.9

# ========================================
# Calendar Export
# ========================================
CALENDAR_DOMAIN=localhost

# ========================================
# Push Notifications (FCM) - Desabilitado em dev
# ========================================
FCM_KEY=
FCM_PROJECT_ID=utfpets

# ========================================
# PWA & Notifications
# ========================================
VAPID_PUBLIC_KEY=
ENABLE_PWA=false
ENABLE_NOTIFICATIONS=false
