# Application
VITE_APP_NAME=UTFPets
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://utfpets.online

# API Configuration
VITE_API_URL=https://api.utfpets.online
VITE_API_VERSION=v1

# Authentication
VITE_AUTH_TOKEN_KEY=utfpets_token
VITE_AUTH_USER_KEY=utfpets_user
VITE_JWT_EXPIRATION=86400
VITE_REFRESH_TOKEN_EXPIRATION=604800

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_PWA_NAME="UTFPets"
VITE_PWA_SHORT_NAME="UTFPets"
VITE_PWA_THEME_COLOR="#3f51b5"
VITE_PWA_BACKGROUND_COLOR="#fafafa"

# Cloudinary Configuration
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_cloudinary_upload_preset
VITE_CLOUDINARY_API_KEY=your_cloudinary_api_key

# Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn
VITE_SENTRY_ENVIRONMENT=production

# Analytics
VITE_GA_MEASUREMENT_ID=your_ga_id

# Feature Flags
VITE_FEATURE_LOCATIONS=true
VITE_FEATURE_SHARING=true
VITE_FEATURE_REMINDERS=true
VITE_FEATURE_NOTIFICATIONS=true

# Development
VITE_DEV_SERVER_PORT=4201
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_DEBUG_TOOLS=false

# Docker Build
DOCKER_REGISTRY=gcr.io/your-project
DOCKER_IMAGE_NAME=utfpets-frontend
DOCKER_IMAGE_TAG=latest